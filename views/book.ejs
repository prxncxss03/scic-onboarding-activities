<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Book: <%= book.Title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('components/edit-modal'); %> <%-
    include('components/delete-modal'); %>

    <div class="container p-4 book-note-container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <button
          type="button"
          class="btn btn-dark"
          onclick="window.location.href='/'"
        >
          Back to Book Note
        </button>
        <div>
          <button
            type="button"
            class="btn btn-warning"
            data-bs-toggle="modal"
            data-bs-target="#editModal"
          >
            Edit
          </button>
          <button
            type="button"
            class="btn btn-danger"
            data-bs-toggle="modal"
            data-bs-target="#deleteModal"
          >
            Delete Book Note
          </button>
        </div>
      </div>

      <h2 class="fw-bold"><%= book.Title %></h2>
      <p class="text-muted">Reviewed on: <%= formatDate(book.Date) %></p>
      <img
        src="<%= book.Image_Url %>"
        alt="<%= book.Title %>"
        class="img-fluid rounded mb-3"
      />
      <p><strong>Author:</strong> <%= book.Author %></p>
      <p><strong>ISBN-13:</strong> <%= book.Isbn %></p>
      <p>
        <strong>Rating:</strong>
        <% for (let i = 1; i <= book.Rating; i++) { %>
        <span>⭐️</span>
        <% } %>
      </p>
      <p><strong>Comment:</strong></p>
      <p><%= book.Comment %></p>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      function deleteBookNote(id) {
        fetch(`/book/${id}`, {
          method: "DELETE",
        })
          .then((res) => {
            if (res.ok) {
              window.location.href = "/";
            } else {
              alert("Failed to delete the book note. Please try again.");
            }
          })
          .catch((err) => {
            alert("An error occurred while deleting the book note.");
          });
      }
    </script>
  </body>
</html>
