<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Book Notes</title>
  </head>
  <body id="main-background">
    <div class="d-flex flex-column align-items-center p-4 w-100 h-100">
      <h1 class="d-flex flex-column">
        Princess Pocon's
        <span class="display-2 fw-bold">Book Notes</span>
      </h1>
      <div id="main-content">
        <div class="d-flex justify-content-between w-100">
          <div class="dropdown">
            <button
              class="btn btn-sm dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Sort by: &nbsp;
              <span class="text-primary">
                <%= sort === 'title' ? 'Title' : sort === 'date' ? 'Most Recent'
                : 'Rating' %>
              </span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/books?sort=title">Title</a>
              </li>
              <li>
                <a class="dropdown-item" href="/books?sort=date">Most Recent</a>
              </li>
              <li>
                <a class="dropdown-item" href="/books?sort=rating">Rating</a>
              </li>
            </ul>
          </div>
          <a type="button" class="btn btn-primary" href="/add-book">Add Book</a>
        </div>

        <div class="container p-0 d-flex flex-column align-items-center h-100">
          <% if (books && books.length > 0) { %> <% books.forEach(book => { %>
          <div class="col-md-12">
            <a
              type="button"
              id="book-card"
              class="mt-3"
              href="/book/<%= book.Id %>"
            >
              <div class="d-flex">
                <div class="w-50 h-100">
                  <img
                    src="<%= book.Image_Url %>"
                    class="rounded mb-3"
                    id="book-image"
                    alt="<%= book.Title %>"
                  />
                </div>
                <div class="w-50 d-flex flex-column justify-content-between">
                  <div>
                    <h5 class="card-title"><%= book.Title %></h5>
                    <h6 class="mb-2 text-muted">Author: <%= book.Author %></h6>
                    <span class="text-dark">ISBN-13: <%= book.Isbn %></span>
                  </div>
                  <div class="h-50 d-flex flex-column justify-content-center">
                    <div class="d-flex mt-2">
                      <span class="text-muted">Rating: &nbsp;</span>
                      <% for (let i = 1; i <= book.Rating; i++) { %>
                      <span>⭐️</span>
                      <% } %>
                    </div>
                    <div class="text-muted">
                      <span>Date Reviewed: <%= formatDate(book.Date) %></span>
                    </div>
                  </div>
                </div>
              </div>
              <p class="card-text">
                <%= book.Comment.length > 250 ? book.Comment.substring(0, 250) +
                '...' : book.Comment %>
              </p>
            </a>
          </div>
          <% }) %> <% } else { %>
          <div
            class="d-flex justify-content-center h-100 align-items-center my-2"
          >
            <h3 class="text-muted">No books found</h3>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
